            valueField:'_id',
            textField:'sys_name',
            editable:false,
            value:currentSysId,
            onChange:function(newValue,oldValue) {
                if(newValue != oldValue) {
                    changeSysId = newValue;
                    console.log(changeSysId);
                }
            }
        });
        $('#filter_org').combotree({
            method: 'get',
            url: '{{projcfg.appurl}}/public/orgRootTreeDataAsyn',
            editable:false,
            multiple:true,
            value: '请选择机构/部门'
        });
        // 表单控件
        $('#user_sys').combobox({
            method: 'get',
            url: '{{projcfg.appurl}}/public/sysData',
            editable:false,
            valueField:'_id',
            textField:'sys_name',
            required:true,
            value:changeSysId,
            onChange:function(newValue,oldValue) {
                if(newValue != oldValue) {
                    $('#user_roles').combobox({
                        method: 'get',
                        url: '{{projcfg.appurl}}/admin/api/common/uum/user/getRoleData/'+newValue,
                        editable:false,
                        valueField:'_id',
                        textField:'role_name',
                        multiple: true,//当为true时，为多选，false为单选
                        checkbox: true,
                        required:true
                    });
                }
            }
        });
        $('#user_org').combotree({
            method: 'get',
            url: '{{projcfg.appurl}}/public/orgRootTreeDataAsyn',
            editable:false,
            required:true,
            value:currentOrgId
        });
       $('#user_roles').combobox({
            method: 'get',
            url: '{{projcfg.appurl}}/admin/api/common/uum/user/getRoleData/'+changeSysId,
            editable:false,
            valueField:'_id',
            textField:'role_name',
            //panelHeight:100,
            multiple:true,
            required:true
        });
        $('#user_duties').combobox({
            method: 'get',
            url: '{{projcfg.appurl}}/public/dict/{{projcfg.uum_duty_mapping_key}}',
            editable:false,
            valueField:'id',
            textField:'text',
            //panelHeight:100,
            multiple:true,
            required:false
        });
        $('#userdatatable').datagrid({
            url:'{{projcfg.appurl}}/admin/api/common/uum/user',
            method:'get',
            queryParams:{
                'filter_sys':$('#filter_sys').combobox('getValue'),
                'filter_org':$('#filter_org').combotree('getValue')
            },
            rownumbers:true,
            //autoRowHeight:true,
            striped:true,
            fitColumns:false,
            toolbar: '#toolbar',
            fit:true,
            border:true,
            singleSelect:true,
            selectOnCheck:false,
            //checkOnSelect:true,
            columns:[[
                {field:'_id',checkbox:true},
                {"field": "user_no","title":"用户编号","width":'8%'},
                {"field": "user_name","title":"用户姓名","width":'7%'},
                {"field": "login_account","title":"登陆账号","width":'20%'},
                {"field": "user_phone","title":"手机号码","width":'10%'},
                {"field": "user_org","title":"所在机构","width":'15%',
                    "formatter":function (data,rowData,rowIndex) {

                        if(data){
                            var roles = new Array();
                            for(var i = 0; i < data.length; i++) {
                                roles.push(data[i].org_fullname);
                            }
                            return roles.join('、');
                        }
                        else {
                            return '';
                        }
//                        return data ? data.org_fullname : '';
                    }
                },
                {
                    "field": "user_roles","title":"拥有角色","width":'15%',
                    "formatter":function (data,rowData,rowIndex) {
                        if(data){
                            var roles = new Array();
                            for(var i = 0; i < data.length; i++) {
                                roles.push(data[i].role_name);
                            }
                            return roles.join('、');
                        }
                        else {
                            return '';
                        }
                    }
                },
//                {
//                    "field": "user_duties","title":"人员职责","width":'10%',
//                    "formatter":function (data,rowData,rowIndex) {
//                        var duties = data ? data.join('，') : '';
//
//                        return "<p title='" + duties + "'>人员职责</p>";
//                    }
//                },
                {"field": "user_sys","title":"归属系统","width":'15%',
                    "formatter":function (data,rowData,rowIndex) {
                        return data.sys_name;
                    }
                },
                {"field": "user_status","title":"状态","width":'5%',
                    "formatter":function (data,rowData,rowIndex) {
                        if(data == 1){
                            return '<span class="success">正常</span>';
                        }else if(data == 0){
                            return '<span class="danger">禁用</span>';
                        }
                    }
                }
            ]],
            onDblClickRow:function(rowIndex, rowData){
                //doEdit(1,rowIndex,rowData);
            },
            onLoadSuccess:function(json) {
                if(!json.success) {
                    msgError(json.msg + ',错误代码:' + json.code);
                }
            },
            onLoadError:function() {
                msgError('加载数据出现时发生错误,请稍候重试...');
            },
            pagination:true,
            loadMsg:'正在加载...'
        });
    });
    function doSearch() {
        $('#userdatatable').datagrid('reload',{
            'filter_name':$('#filter_name').val(),
            'filter_sys':$('#filter_sys').combobox('getValue'),
            'filter_org':$('#filter_org').combotree('getValue')
        });
    }
    function doClear() {
        $('#filter_name').val('');
        $('#filter_sys').combobox('setValue',currentSysId),
        $('#filter_org').combotree('setValue',currentOrgId)
        doSearch();
    }
    // 新增数据
    function doAdd(value) {//alert(JSON.stringify($('#userForm').serializeJson()));

        // 验证表单
        var validate = $('#userForm').form('validate');
        if(!validate) {
            return false;
        }
        $.ajax({
            url: '{{projcfg.appurl}}/admin/api/common/uum/user',
            type: 'post',
            data: $('#userForm').serializeJson(),
            success: function (data) {
                if(data.success) {
                    msgSuccess(data.msg);
                    closeDialog();
                    doSearch();
                }
                else {
                    msgError(data.msg+',错误代码:'+data.code);
                }
            }
        });
    }

    // 打开修改页面
    function toEdit() {

        // 获得选择行
        var rows = $('#userdatatable').datagrid('getChecked');
        if (rows.length != 1) {
            msgError('提示,请选择一条数据再进行修改');
            return false;
        }
        var id = rows[0]._id;

        $('#user_roles').combobox({
            method: 'get',
            url: '{{projcfg.appurl}}/admin/api/common/uum/user/getRoleData/'+rows[0].user_sys._id,
            editable:false,
            valueField:'_id',
            textField:'role_name',
            //panelHeight:100,
            multiple:true,
            required:true
        });
        openPage("修改用户", id, doEdit);
        // 获取远程数据
        $.ajax({
            url: '{{projcfg.appurl}}/admin/api/common/uum/user/'+id,
            type: 'get',
            data: {
            }, success: function (data) {
                if(data.success) {
                    console.log(data);
                    $('#user_org').combotree({
                        method: 'get',
                        url: '{{projcfg.appurl}}/public/orgRootTreeDataAsyn',
                        editable:false,
                        required:true,
                        value:data.user_org,
                    });
                    $('#userForm').form('load',data.data);


                }
                else {
                    msgError(data.msg+',错误代码:'+data.code);
                }
            }
        });
    }
    // 修改数据
    function doEdit(value) {

        // 验证表单
        var validate = $('#userForm').form('validate');
        if(!validate) {
            return false;
        }
        $.ajax({
            url: '{{projcfg.appurl}}/admin/api/common/uum/user/'+value,
            type: 'put',
            data: $('#userForm').serializeJson(),
            success: function (data) {
                if(data.success) {
                    msgSuccess(data.msg);
                    closeDialog();
                    doSearch();
                    clear();
                }
                else {
                    console.log(data)
                    msgError(data.msg+',错误代码:'+data.code);
                }
            }
        });

    }
    function doReset() {

        // 获得选择行
        var rows = $('#userdatatable').datagrid('getChecked');
        if (rows.length != 1) {
            msgError('提示,请选择一条数据再进行操作');
            return false;
        }
        var id = rows[0]._id;
        msgConfirm('确定重置 <span class="danger">'+rows[0].user_name+'</span> 的密码？',function(result) {
            // 获取远程数据
            if(result) {
                $.ajax({
                    url: '{{projcfg.appurl}}/admin/api/common/uum/user/resetpwd/' + id,
                    type: 'get',
                    data: {}, success: function (data) {
                        if (data.success) {
                            msgSuccess(data.msg);
                        }
                        else {
                            msgError(data.msg + ',错误代码:' + data.code);
                        }
                    }
                });
            }
        });
    }
    // 清空新增表单数据
    function clear() {
        $('#userForm').form('reset');
    }

</script>