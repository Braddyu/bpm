<script>
    // 关闭窗口
    function closeDialog() {
        $('#userModal').dialog('close');
        clear();
    }
    function uploadFile(){

        document.getElementById("file").click();

    }
    /**
     * 上传修正后的模板
     */
    function doUploadCorrect(){
        var  filepath = $("#file").val();
        // 图片类型
        var extStart=filepath.lastIndexOf(".");
        var ext=filepath.substring(extStart,filepath.length).toUpperCase();

        if(ext!=".XLSX"){
            $.messager.alert('提示','文件限于xlsx格式');
            return;
        }

        $.ajaxFileUpload({
            type:'POST',
            url : '{{projcfg.appurl}}/admin/api/common/uum/user/upload/userFile?sys_id='+$("#filter_sys").combobox('getValue'),
            secureuri : false,
            fileElementId : 'file',     //与html代码中的input的id值对应
            dataType : 'json',
            success : function(data) {
                if(data.success){
                    $.messager.alert('提示','修正成功!');
                    $('#userdatatable').datagrid('reload');//刷新
                }else{
                    $.messager.alert('警告',data.msg,'error');
                }
            },
            error:function(err){
                alert(JSON.stringify(err));
            }
        })
        document.getElementById("file").outerHTML+="";
    }
    // 打开页面
    function openPage(title, value, callback) {
        clear();
        // 表单控件
        $('#user_sys').combobox({
            method: 'get',
            url: '{{projcfg.appurl}}/public/sysData',
            editable:false,
            valueField:'_id',
            textField:'sys_name',
            required:true,
            value:changeSysId,
            onChange:function(newValue,oldValue) {
                if(newValue != oldValue) {
                    $('#user_roles').combobox({
                        method: 'get',
                        url: '{{projcfg.appurl}}/admin/api/common/uum/user/getRoleData/'+newValue,
                        editable:false,
                        valueField:'_id',
                        textField:'role_name',
                        multiple:true,
                        required:true
                    });
                }
            }
        });
        $('#user_roles').combobox({
            method: 'get',
            url: '{{projcfg.appurl}}/admin/api/common/uum/user/getRoleData/'+changeSysId,
            editable:false,
            valueField:'_id',
            textField:'role_name',
            //panelHeight:100,
            multiple:true,
            required:true
        });
        $('#userModal').show();
        $('#userModal').mydialog({
            title:title,
            width: 600,
            height: 690,
            top:100,
            modal: true,
            myButtons:[
                {
                    text:'确定',
                    btnCls:'btn btn-blue',
                    handler:function(){
                        callback(value);
                    }
                },
                {
                    text:'关闭',
                    btnCls:'btn btn-danger',
                    handler:function(){
                        closeDialog();
                    }
                }
            ]
        });
    }
    var currentSysId = '{{currentUser.user_sys._id}}';
