                        }else {
                            msgSuccess('处理成功');
                            $("#dd").dialog('close');
                            $('#orderTablelist').datagrid('reload');
                            $.messager.progress('close');
                        }
                    }else{
                        $.messager.progress('close');
                        $.messager.alert('错误提示',data.error);
                    }
                }
            });
        }

    }


