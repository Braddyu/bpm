<script src="{{projcfg.appurl}}/static/js/echart/v3.1.3/echarts.min.js"></script>
<div class="row">
    <div class="col-xs-12 col-md-12">
        <div class="widget">
            <div class="widget-body">
                <div class="row" >
                    <div  class="col-xs-12 col-md-12" >
                        <div class="row" >
                            <div  class="col-xs-12 col-md-12" >
                                <div class="widget widget-spacing">
                                    <div class="widget-header bordered-bottom bordered-themeprimary">
                                        <i class="widget-icon fa fa-tags themeprimary"></i>
                                        <span class="widget-caption themeprimary">用户统计</span>
                                    </div>
                                    <!--Widget Header-->
                                    <div class="widget-body">
                                        <div style="height:230px;">
                                            <div id="userChart" style="width:100%;height:230px;"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        var userChart = echarts.init(document.getElementById('userChart'));
        var option = {
            title: {
                x: 'center',
                text: '系统用户量统计',
                subtext: '雅典娜-集中稽核平台'
            },
            barWidth : 30,//柱图宽度
            //barMaxWidth:30,//最大宽度
            xAxis: [
                {
                    type: 'category',
                    show: true,
                    data: ['用户总数', '男', '女']
                }
            ],
            yAxis: [
                {
                    show: true,
                    type: 'value',
                    splitArea: {show: true}
                }
            ],
            series: [
                {
                    name: '系统用户量统计',
                    type: 'bar',
                    itemStyle: {
                        normal: {
                            color: function(params) {
                                var colorList = [ '#AE57E4','#4A4AFF','#FF0000'];
                                return colorList[params.dataIndex]
                            },
                            label: {
                                show: true,
                                position: 'top',
                                formatter: '{c}'
                            }
                        }
                    },
                    data: [1451,1000,451]
                }
            ]
        };

        userChart.setOption(option);
    });
</script>