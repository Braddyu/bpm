            url: '{{projcfg.appurl}}/api/order_manage/order_list/procDefineDetail',
            type: 'post',
            dataType: 'json',
            data: {
                proc_code: proc_code,
                node_code: node_code
            },
            success: function (data) {
                if (data.success) {
                    var comboboxData = [];

                    //归档节点
                    if (data.data.isEnd) {
                        //是归档节点不需要下一节点处理人
                        $("#tr_5").hide();
                        endFlag = true;
                        comboboxData.push({value: '1', text: '归档'});
