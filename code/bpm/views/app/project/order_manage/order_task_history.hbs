<script type="text/javascript">
    $(document).ready(function () {
        //加载我的待办列表
        loadOrderTodaoListDatagrid();
        //设置时间
        var curr_time = new Date();
        $("#startDate").datebox("setValue",myformatter(curr_time));
        $("#endDate").datebox("setValue",myformatter(curr_time));

    });


    function myformatter(date){
        var y = date.getFullYear();
        var m = date.getMonth()+1;
        var d = date.getDate();
        return y+'-'+(m<10?('0'+m):m)+'-'+(d<10?('0'+d):d);
    }

    function myparser(s){
        if (!s) return new Date();
        var ss = (s.split('-'));
        var y = parseInt(ss[0],10);
        var m = parseInt(ss[1],10);
        var d = parseInt(ss[2],10);
        if (!isNaN(y) && !isNaN(m) && !isNaN(d)){
            return new Date(y,m-1,d);
        } else {
            return new Date();
        }
    }

    //时间格式化:new Date().Format("yyyy-MM-dd hh:mm:ss");
    Date.prototype.Format = function (fmt) { //author: meizz
        var o = {
            "M+": this.getMonth() + 1, //月份
            "d+": this.getDate(), //日
            "h+": this.getHours(), //小时
            "m+": this.getMinutes(), //分
            "s+": this.getSeconds(), //秒
            "q+": Math.floor((this.getMonth() + 3) / 3), //季度
            "S": this.getMilliseconds() //毫秒
        };
        if (/(y+)/.test(fmt)) fmt = fmt.replace(RegExp.$1, (this.getFullYear() + "").substr(4 - RegExp.$1.length));
        for (var k in o)
            if (new RegExp("(" + k + ")").test(fmt)) fmt = fmt.replace(RegExp.$1, (RegExp.$1.length == 1) ? (o[k]) : (("00" + o[k]).substr(("" + o[k]).length)));
        return fmt;

    }
    // 加载工单基本属性列表
    function loadOrderTodaoListDatagrid(){
        $('#orderTablelist').datagrid({
            url:'{{projcfg.appurl}}/api/order_manage/order_task_histroy/list',
            method:'post',
            rownumbers:true,
            striped:true,
            border:false,
            fitColumns:true,
            fit:true,
            pageSize: 30,
            selectOnCheck:true,
            checkOnSelect:true,
            columns:[[
                //{"field":"_id",checkbox:true},
                {"field": "user_no","title":"boss工号","width":"33%"},
                {"field": "user_name","title":"管理员姓名","width":"33%",
                    formatter:function(value,row,index){
                        return "<span title='" + value + "'>" + value + "</span>";
                    }},
                {"field": "count","title":"处理工单数","width":"33%"},
            ]],
            onLoadError:function() {
                msgError('加载数据出现时发生错误,请稍候重试...');
            },
			onDblClickRow:function(rowIndex, rowData){
                orderHistoryDetail(rowData);
            },
            pagination:true,
            loadMsg:'正在加载...'
        });

    }
    //查询
    function  doSearch(){
        $('#orderTablelist').datagrid({
            url:'{{projcfg.appurl}}/api/order_manage/order_task_histroy/list',
            queryParams: {
                startDate: $("#startDate").datebox('getValue'),
                endDate: $("#endDate").datebox('getValue'),
                user_no:$("#user_no").val(),
            }
        });
    }
</script>
