            valueField:'proc_code',
            textField:'proc_name'
        });
        $("#proc_task_code").combobox("setValue","p-109");
    }


    //查询
   function  doSearch(){
       $('#orderTablelist').datagrid({
           url: '{{projcfg.appurl}}/api/order_manage/order_file/list',
           queryParams: {
               proc_code: $("#proc_task_code").combobox('getValue'),
