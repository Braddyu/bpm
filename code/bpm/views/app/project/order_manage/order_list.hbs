    /**
     * 提交新工单
     */
    function saveNewOrder(){
        // 验证表单
        var validate = $('#orderDetailForm').form('validate');
        if(!validate) {
            return false;
        }

       $.ajax({
            url: '{{projcfg.appurl}}/api/order_manage/order_list/createAndAcceptAssign',
            type: 'post',
            dataType:'json',
            data: $('#orderDetailForm').serializeJson(),
            success: function (data) {
