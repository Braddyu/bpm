        function doChoose(flag,id){
            if(flag == 1){
                var datas = $('#'+id).datagrid('getSelections');
                if(datas.length > 0){
                    var ids = [];
                    var names = [];
                    var codes = [];
                    $.each(datas,function(i,n){
                        ids.push(n._id);
                        names.push(n.user_name);
                        codes.push(n.user_no);
                    });
                    $('#p2_task_val').val(ids.join(";"));
                    $('#p2_textArea').textbox('setValue',names.join(";"));
                    $('#p2_task_code').val(codes.join(";"));
                    $('#'+id).datagrid('uncheckAll');
                    $('#win1').window('close');
                }else{
                    $.messager.alert('提示','请至少选择一行数据','error');
                }
            }else if(flag == 2){
                var t = $('#orgId').combotree('tree');	// get the tree object
                var n = t.tree('getChecked');
                console.log("=====",n);

                var g = $('#roleId').combogrid('grid');	// get datagrid object
                var r = g.datagrid('getChecked');
                console.log("======",r);
                if(n.length == 0){
                    $.messager.alert('提示','请至少选择一个组织机构','error');
                    return false;
                }
                if(!r || r.length == 0){
                    $.messager.alert('提示','请至少选择一个参与职务','error');
                    return false;
                }
                var ids = [];
                var names = [];
                var codes = [];
                var tags = [];
                var levels = [];
                var orgids = [];
                var orgnames = [];
                $.each(n,function(i,n){
                    orgids.push(n.id);
                    orgnames.push(n.text);
                });
                $.each(r,function(i,n){
                    ids.push(n._id);
                    names.push(n.role_name);
                    codes.push(n.role_code);
                    tags.push(n.role_tag);
                    levels.push(n.role_level);
                });
                $('#p2_task_val').val(ids.join(","));
                $('#p2_textArea').textbox('setValue',"组织："+orgnames.join(",")+";\n\n职务："+names.join(",")+";");
                $('#p2_task_code').val(codes.join(","));
                $('#p2_task_tag').val(tags.join(","));
                $('#p2_task_level').val(levels.join(","));
                $('#p2_task_role_name').val(names.join(","));
                $('#p2_task_orgid').val(orgids.join(","));
                $('#p2_task_orgname').val(orgnames.join(","));
                $('#orgId').combotree('clear');
                $('#roleId').combogrid('clear');
                $('#win2').window('close');
            }else if(flag == 3){
                var info = $('#'+id).combobox('getValue');
                var cur_org = $('#win3_cur_org').combobox('getValue');
                var g = $('#win3_roleId').combogrid('grid');	// get datagrid object
                var r = g.datagrid('getChecked');
                var typevalue = $("input[name='ref_type']:checked").val();
                if(!info){
                    $.messager.alert('提示','请选择参照的节点数据','error');
                    return false;
                }

                if(!typevalue){
                    $.messager.alert('提示','请选择参照类型','error');
                    return false;
                }
                if(typevalue == "2" && !cur_org){
                    $.messager.alert('提示','请选择当前机构','error');
                    return false;
                }
                if(typevalue == "2" && (!r || r.length == 0)){
                    $.messager.alert('提示','请选择职务信息','error');
                    return false;
                }

                var ids = [];
                var names = [];
                var codes = [];
                var tags = [];
                var levels = [];
                if(typevalue == "2"){
                    $.each(r,function(i,n){
                        ids.push(n._id);
                        names.push(n.role_name);
                        codes.push(n.role_code);
                        tags.push(n.role_tag);
                        levels.push(n.role_level);
                    });
                    $('#p2_task_role_id').val(ids.join(","));
                    $('#p2_textArea').textbox('setValue',"参照节点："+$('#'+id).combobox('getText')+";\n\n参照类型：当前机构;\n\n当前机构："+$('#win3_cur_org').combobox('getText')+";\n\n职务："+names.join(",")+";");
                    $('#p2_task_code').val(codes.join(","));
                    $('#p2_task_tag').val(tags.join(","));
                    $('#p2_task_level').val(levels.join(","));
                    $('#p2_task_role_name').val(names.join(","));
                    $('#p2_task_cur_org').val(cur_org);
                }else{
                    $('#p2_textArea').textbox('setValue',"参照节点："+$('#'+id).combobox('getText')+";\n\n参照类型：当前人;");
                }
                $('#p2_task_ref_type').val(typevalue);
                $('#p2_task_val').val(info);
                $('#win3_cur_org').combobox('setValue','');
                $('#win3_roleId').combogrid('clear');
                $('#win3').window('close');
            }
        }

        function saveNodeData(flag){
            if(flag == 1){
                var id = $('#p1_line_id').val();
                var obj = processDefineDiv.getItemInfo(id,'line');
                var lineNode = {};
                lineNode.item_code = id;
                lineNode.item_type = obj.type;
                lineNode.item_el = $('#item_el').textbox('getValue');
                lineNode.item_remark = $('#p1_textArea').textbox('getValue');
                lineNode._id = $('#p1_item_id').val();
                var tag = true;
                $.each(lineNodeDatas,function(i,n){
                    if(n.item_code && n.item_code.indexOf(id) != -1){
                        tag = false;
                        lineNodeDatas.splice(i,1,lineNode);
                    }
                });
                if(tag){
                    lineNodeDatas.push(lineNode);
                }
            }else if(flag == 2){
                var itemType = $("input[name='checkType']:checked").val();
                if(!itemType){
                    $.messager.alert('提示','请选择参与类型','error');
                    return;
                }else{
                    var nodeVar = $('#p2_node_var').textbox('getValue');
//                    var stepCode = $('#p2_step_code').textbox('getValue');
//                    var itemCodeNum = $('#p2_item_code_num').textbox('getValue');
                    var itemOvertime = $('#p2_item_overtime').textbox('getValue');
                    var itemTextarea = $('#p2_textAreaRemark').textbox('getValue');
                    var itemOvertimeAfterActionType = $('#p2_item_overtime_afterAction').combobox('getValue') ? $('#p2_item_overtime_afterAction').combobox('getValue') : '';
                    var itemOvertimeAfterActionInfo = $('#p2_item_overtime_afterAction').combobox('getText') ? $('#p2_item_overtime_afterAction').combobox('getText') : '';

                    //触发事件
                    var itemTouchEventType = $('#p2_item_touchEvent').combobox('getValue') ? $('#p2_item_touchEvent').combobox('getValue') : '';
                    var itemTouchEventInfo = $('#p2_item_touchEvent').combobox('getText') ? $('#p2_item_touchEvent').combobox('getText') : '';
                    var itemFilePath = $('#p2_item_filePath').textbox('getValue');
//                    var itemFunName = $('#p2_item_funName').textbox('getValue');


                    var itemText = $('#p2_textArea').textbox('getValue');
                    if(!itemText){
                        $.messager.alert('提示','参与类型选取的结果不能为空','error');
                        return;
                    }
                    if(itemOvertimeAfterActionType){
                        if(!itemOvertime){
                            $.messager.alert('提示','选取超时动作必须要设置超时时间','error');
                            return;
                        }
                    }

                    if(itemTouchEventType){
                        if(!itemFilePath){
//                        if(!itemFilePath || !itemFunName){
                            $.messager.alert('提示','选取触发事件必须要设置触发地址','error');
//                            $.messager.alert('提示','选取触发事件必须要设置文件路径和文件名','error');
                            return;
                        }
                    }

                    var id = $('#p2_task_id').val();
                    var obj = processDefineDiv.getItemInfo(id,'node');
                    var taskNode = {};
                    taskNode.item_code = id;
                    taskNode.item_type = obj.type;
                    taskNode.item_sms_warn = $("input[name='smsType']:checked").val();
                    taskNode.selectType = itemType;
                    taskNode.selectVal = itemText;
                    if(itemType == 1){//参与人
                        taskNode.item_assignee_user = $('#p2_task_val').val();
                        taskNode.item_assignee_user_code = $('#p2_task_code').val();
                    }else if(itemType == 2){//参与角色
                        taskNode.item_assignee_role = $('#p2_task_val').val();
                        taskNode.item_assignee_role_code = $('#p2_task_code').val();
                        taskNode.item_assignee_role_tag = $('#p2_task_tag').val();
                        taskNode.item_assignee_role_level = $('#p2_task_level').val();
                        taskNode.item_assignee_role_name = $('#p2_task_role_name').val();
                        taskNode.item_assignee_org_ids = $('#p2_task_orgid').val();
                        taskNode.item_assignee_org_names = $('#p2_task_orgname').val();
                    }else if(itemType == 3){//参照人
                        taskNode.item_assignee_ref_task = $('#p2_task_val').val();
                        taskNode.item_assignee_role = $('#p2_task_role_id').val();
                        taskNode.item_assignee_role_code = $('#p2_task_code').val();
                        taskNode.item_assignee_role_tag = $('#p2_task_tag').val();
                        taskNode.item_assignee_role_name = $('#p2_task_role_name').val();
                        taskNode.item_assignee_role_level = $('#p2_task_level').val();
                        taskNode.item_assignee_ref_cur_org = $('#p2_task_cur_org').val();
                        taskNode.item_assignee_ref_type = $('#p2_task_ref_type').val();
                    }
                    taskNode.item_node_var = nodeVar;
                    taskNode.item_step_code = '';
                    taskNode.item_code_num = '';
//                    taskNode.item_step_code = stepCode;
//                    taskNode.item_code_num = itemCodeNum;
                    taskNode.item_overtime = itemOvertime;
                    taskNode.item_overtime_afterAction_type = itemOvertimeAfterActionType;
                    taskNode.item_overtime_afterAction_info = itemOvertimeAfterActionInfo;
                    taskNode.item_touchEvent_type = itemTouchEventType;
                    taskNode.item_touchEvent_info = itemTouchEventInfo;
                    taskNode.item_filePath = itemFilePath;
                    taskNode.item_funName = '';
//                    taskNode.item_funName = itemFunName;
                    taskNode.item_remark = itemTextarea;
                    taskNode._id = $('#p2_item_id').val();
                    var tag = true;
                    $.each(taskNodeDatas,function(i,n){
                        if(n.item_code && n.item_code.indexOf(id) != -1){
                            tag = false;
                            taskNodeDatas.splice(i,1,taskNode);
                        }
                    });
                    if(tag){
                        taskNodeDatas.push(taskNode);
                    }
                }
            }
            $.messager.show({
                title:'提示',
                msg:'节点保存成功',
                timeout:3000,
                showType:'slide'
            });
        }

