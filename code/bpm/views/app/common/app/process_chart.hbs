            var lines=item_config.lines;
            var nodes=item_config.nodes;
            return (testStartAndEnd(nodes,"start  round") && testStartAndEnd(nodes,"end  round") && testNodes(lines,nodes));
        }

        function testNodes(lines,nodes){
            var flag=true;
            for(var node in nodes){
                var flag_to=false;
                var flag_from=false;
                var type=nodes[node].type;
                if(!(type=="end  round"|| type=="start  round")){
                    for(var line in lines){
                        var from = lines[line].from;
                        var to = lines[line].to;
                        if(from==node){
                            flag_from=true;
                        }

                        if(to==node){
                            flag_to=true;
                        }
                    }
                }else{
                    flag_from=true;
                    flag_to=true;
                }
                if(!(flag_from&&flag_to)){
                    flag=false;
                }
            }
            return flag;
        }
        function testStartAndEnd(nodes,condition){
            var flag=false;
            for (var node in nodes){
                var type=nodes[node].type
                if(type==condition){
                    flag=true;
                }
            }
            return flag;
        }


